[push]
    default = current

[user]
    name = Lorrin Nelson
    email = lorrin@lorrin.org

[core]
    editor = vim
    # delta from https://github.com/dandavison/delta
    pager = delta

[interactive]
    # delta from https://github.com/dandavison/delta
    diffFilter = delta --color-only

[delta]
    line-numbers = true
    side-by-side = true
    syntax-theme = Coldark-Dark # See `delta --show-syntax-themes --dark`
    # navigate = true # Setting this doesn't seem to do anything?
    light = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[commit]
    gpgsign = true

[add "interactive"]
    useBuiltin = false

[includeIf "gitdir:~/dg/"]
    path = ~/dg/.gitconfig
